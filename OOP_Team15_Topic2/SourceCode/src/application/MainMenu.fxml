<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainScreenController">
   <center>
      <AnchorPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: White;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnBubbleSort" layoutX="416.0" layoutY="363.0" mnemonicParsing="false" onAction="#bubbleSortScreen" prefWidth="250.0" style="-fx-background-color: Black;" text="Bubble Sort" textFill="WHITE">
               <font>
                  <Font name="Microsoft Sans Serif" size="29.0" />
               </font>
            </Button>
            <Button fx:id="btnHeapSort" layoutX="417.0" layoutY="454.0" mnemonicParsing="false" onAction="#heapSortScreen" prefWidth="250.0" style="-fx-background-color: Black;" text="Heap Sort" textFill="WHITE">
               <font>
                  <Font name="Microsoft Sans Serif" size="29.0" />
               </font>
            </Button>
            <Button fx:id="btnShellSort" layoutX="419.0" layoutY="544.0" mnemonicParsing="false" onAction="#shellSortScreen" prefWidth="250.0" style="-fx-background-color: Black;" text="Shell Sort" textFill="WHITE">
               <font>
                  <Font name="Microsoft Sans Serif" size="29.0" />
               </font>
            </Button>
            <Label layoutX="343.0" layoutY="287.0" text="Choose one sorting algorithm to start">
               <font>
                  <Font name="Segoe UI Bold" size="23.0" />
               </font>
            </Label>
            <Label layoutX="292.0" layoutY="37.0" text="SORTING ALGORITHM " textFill="#aaa0b7">
               <font>
                  <Font name="Segoe UI Black" size="45.0" />
               </font>
            </Label>
            <Label layoutX="288.0" layoutY="75.0" text="VISUALIZATION" textFill="#4d31ad">
               <font>
                  <Font name="Segoe UI Black" size="63.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#menuAbout" text="About the program" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Quit">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#menuExit" text="Exit " />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
